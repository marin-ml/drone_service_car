RootWidget:
    btn_start: Button_start
    btn_record: Button_record
    img_video: video_player

    BoxLayout:
        orientation: 'vertical'

        Image:
            id: video_player

        BoxLayout:
            id: menu
            size_hint: None, None
            size : 600, 50
            orientation: 'horizontal'

            Button:
                id: Button_start
                text: 'Pause'
                on_release: root.on_btn_start()

            Button:
                id: Button_record
                text: 'Record'
                on_release: root.on_btn_record()

            Button:
                text: 'Setting'

            Button:
                text: 'Exit'
